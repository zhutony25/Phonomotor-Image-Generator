{
  "manifest_version": 3,
  "name": "Phonomoter Image Generator",
  "version": "1.0",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_title": "Open Phonomoter Image Generator",
    "default_icon": "logos/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["phonemes.json", "images/*", "popup.html"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "logos/logo.png",
    "48": "logos/logo.png",
    "128": "logos/logo.png",
    "512": "logos/logo.png"
  }
}
